<idea-plugin>
    <id>lang.dragonbook.DragonBookLangSupport</id>
    <name>DragonBook Lang</name>
    <vendor url="https://https://github.com/slavam2605">Viacheslav Moklev</vendor>
    <description><![CDATA[
        Basic language support for DragonBook language.
    ]]></description>

    <dependencies>
        <!-- Unused for now, keep for future UI -->
        <module name="intellij.platform.compose"/>
    </dependencies>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="DragonBook File"
                implementationClass="lang.dragonbook.dragonbooklangsupport.language.DragonBookFileType"
                fieldName="INSTANCE"
                language="DragonBookLanguage"
                extensions="dg"/>

        <lang.parserDefinition
                language="DragonBookLanguage"
                implementationClass="lang.dragonbook.dragonbooklangsupport.language.DragonBookParserDefinition"/>

        <lang.syntaxHighlighterFactory
                language="DragonBookLanguage"
                implementationClass="lang.dragonbook.dragonbooklangsupport.language.highlighter.DragonBookSyntaxHighlighterFactory"/>
        
        <colorSettingsPage implementation="lang.dragonbook.dragonbooklangsupport.language.highlighter.DragonBookColorSettingsPage"/>
    </extensions>
</idea-plugin>